<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/logobutton"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="3"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:text="@string/app_name"
            android:textColor="#F2F2F2"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_toLeftOf="@+id/binding" >

        <RelativeLayout
            android:id="@+id/task_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_line"
            android:layout_below="@+id/top_line"
            android:background="@drawable/wood"
            android:layout_toLeftOf="@+id/green_button" >
        </RelativeLayout>

        <TextView
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/blue_button"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/blue_button"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/left_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/blue_button"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/NE"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/top_line"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/green_button"
            android:clickable="true"
            android:paddingLeft="100dp"
            android:paddingTop="25dp"
            android:text="@string/txt1"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/ViewR"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/NE"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/green_button"
            android:paddingLeft="90dp"
            android:paddingTop="25dp"
            android:text="@string/txt2"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/GraphV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ViewR"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/green_button"
            android:paddingLeft="90dp"
            android:paddingTop="25dp"
            android:text="@string/txt3"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/CalenderV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/GraphV"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/green_button"
            android:paddingLeft="105dp"
            android:paddingTop="25dp"
            android:text="@string/txt4"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/green_button"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button2" />

        <Button
            android:id="@+id/blue_button"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/green_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/button" />

        <Button
            android:id="@+id/red_button"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/blue_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/button4" />

        <Button
            android:id="@+id/yellow_button"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/red_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/button3" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/yellow_button"
            android:layout_marginTop="5dp"
            android:background="@drawable/home_button"
            android:text="H"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/binding_image"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_line"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/top_line"
            android:background="@drawable/custom_border"
            android:src="@drawable/b" />
    </RelativeLayout>

</RelativeLayout>